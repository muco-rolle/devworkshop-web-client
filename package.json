        "apollo-boost": "^0.4.7",
        "graphql": "^15.0.0",
        "history": "^4.10.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.0.0",
        "react-router-dom": "^5.1.2",
        "react-scripts": "3.4.1",
